system=$(uname)
case "$system" in
    "Darwin" )
        alias finderhide='defaults write com.apple.finder AppleShowAllFiles FALSE; killall Finder'
        alias findershow='defaults write com.apple.finder AppleShowAllFiles TRUE; killall Finder'

        #export JAVA_HOME=`/usr/libexec/java_home`
        ;;
    "Linux" )
        #export JAVA_HOME="/usr/lib/jvm/java-8-oracle"
        ;;
esac

alias sequelize="./node_modules/.bin/sequelize"
alias irssi='TERM=screen-256color irssi'
alias pir='TERM=screen-256color proxychains4 irssi'
alias emacsx="/Applications/Emacs.app/Contents/MacOS/Emacs"

# Zulily aliases - Updated on Thu Jun 21 2018 3:04pm
alias xdebugloopback="sudo ifconfig lo0 alias 10.254.254.254"
alias zu:sync="xdebugloopback && cd ~/zulily/docker-local && sh scripts/sync_repos.sh && cd ~/zulily"
alias zu:up="export FT_CONTAINER_NAME=$HOST && cd ~/zulily/docker-local && docker-compose up"
alias zu:logs="tail -f ~/zulily/docker-local/php-fpm/var/log/php/php_error.log"
alias zu:restart="cd ~/zulily/docker-local && docker-compose -f docker-compose.yml -f optional.docker-compose.yml restart"
